<import src='../movie/movie-template.wxml' />

<template name='movie-grid-template'>
<scroll-view class='grid-container' 
scroll-y="true" scroll-x="false" bindscrolltolower="onScrollLower" lower-threshold="0">
    <block wx:for="{{movies}}" wx:for-item="movie" wx:key="">
        <view class='single-view-container'>
            <template is="movieTemplate" data="{{...movie}}"></template>
        </view>
    </block>
</scroll-view>
</template>